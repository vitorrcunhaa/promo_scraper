[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target
[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/promo_scraper
ExecStart=/home/ubuntu/env/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/ubuntu/promo_scraper/promo_scraper/promo_scraper.sock blog.wsgi:application

       
[Install]
WantedBy=multi-user.target